<h1>Editing Book</h1>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
<div>
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div>
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<div>  
  <%= f.submit 'Update Book' %>
</div>
  
<% end %>

<div>
<%= link_to "Show", book_path(@book.id) %>
|
<a class="back" href="/books">Back</a>
</div>